<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/bt_state_fp_1">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/fragment_saved_note_rv_entry_cb_checked"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:clickable="false" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Small Text"
        android:id="@+id/fragment_saved_note_rv_entry_tv_filename"
        android:layout_marginLeft="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:maxLength="30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/fragment_saved_note_rv_entry_tv_lastmodifieddate"
        android:maxLength="100"
        android:layout_alignTop="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:textColor="#ffa7a7a7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Last modified : "
        android:id="@+id/textView"
        android:layout_below="@+id/fragment_saved_note_rv_entry_tv_filename"
        android:layout_alignStart="@+id/fragment_saved_note_rv_entry_tv_filename"
        android:layout_marginTop="4dp"
        android:textColor="#ffa7a7a7" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/divider"></FrameLayout>
</RelativeLayout>