<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity"
    tools:ignore="MergeRootFrame"
    android:id="@+id/activity_aboutus_drawerlayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"
            android:id="@+id/aboutus_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </include>

        <FrameLayout
            android:id="@+id/activity_aboutus_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:id="@+id/activity_aboutus_drawer"
        android:background="#ffffffff"
        android:layout_gravity="start"
        android:elevation="2dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/cee_banner_2_1"
            android:id="@+id/activity_aboutus_space" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/activity_aboutus_space"
            android:layout_alignParentStart="true"
            android:id="@+id/activity_aboutus_drawer_settings"
            android:background="@drawable/bt_state_fp_setting">

            <Space
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:background="#ffffc891"
                android:id="@+id/activity_aboutus_drawer_settings_space"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="SETTINGS"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:id="@+id/activity_aboutus_drawer_settings_tv_title"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_below="@id/activity_aboutus_drawer_settings"
            android:layout_alignParentStart="true"
            android:id="@+id/activity_aboutus_drawer_help"
            android:background="@drawable/bt_state_fp_help">

            <Space
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:background="#ffffc891"
                android:id="@+id/activity_aboutus_drawer_help_space"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="HELP"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:id="@+id/activity_aboutus_drawer_help_tv_title"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_below="@id/activity_aboutus_drawer_help"
            android:layout_alignParentStart="true"
            android:id="@+id/activity_aboutus_drawer_aboutus"
            android:background="@drawable/bt_state_fp_aboutus">

            <Space
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:background="#ffffc891"
                android:id="@+id/activity_aboutus_drawer_aboutus_space"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ABOUT US"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:id="@+id/activity_aboutus_drawer_aboutus_tv_title"
                android:textSize="14dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/cee_banner_2_5" />

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>