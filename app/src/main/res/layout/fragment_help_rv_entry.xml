<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

        <android.support.v7.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            card_view:cardCornerRadius="15dp"
            card_view:cardBackgroundColor="@color/qa_header"
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_vertical"
            android:alpha="50">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Q"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="qqqq"
            android:id="@+id/fragment_help_rv_entry_tv_q"
            android:layout_gravity="center_vertical"
            android:padding="4dp"
            android:background="@color/qa_text_bg"
            android:layout_marginRight="4dp"
            android:alpha="50"
            android:backgroundTintMode="multiply"
            android:autoText="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:id="@+id/fragment_help_rv_entry_ll_a">

        <android.support.v7.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            card_view:cardCornerRadius="15dp"
            card_view:cardBackgroundColor="@color/qa_header"
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_vertical"
            android:alpha="50">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="A"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="aaaa"
            android:id="@+id/fragment_help_rv_entry_tv_a"
            android:layout_gravity="center_vertical"
            android:padding="4dp"
            android:background="@color/qa_text_bg"
            android:layout_marginRight="4dp"
            android:alpha="50"
            android:backgroundTintMode="multiply"
            android:autoText="true" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/divider"></FrameLayout>
</LinearLayout>